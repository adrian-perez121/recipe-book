<h1 class="text-center text-2xl font-bold">My Recipes</h1>

<div class="recipe-grid py-6 gap-8 items-end">
  <div class="new-recipe grid items-center justify-center">
    <%= link_to "Create A New Recipe", new_recipe_path, class: "a" %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="flex flex-col gap-2 items-center hover:scale-[1.05] hover: ease-in-out duration-300">
      <%= image_tag url_for(recipe.food_img), class: "h-40 w-40 rounded" %>
      <a href="<%= recipe_path(recipe) %>">
        <h2 class="font-bold"><%= recipe.title %></h2>
        <p class="text-sm self-start h-24 w-full overflow-scroll"><%= recipe.description %></p>
      </a>
        <div class="flex justify-between w-full">
        <%= link_to "Edit", edit_recipe_path(recipe), class: "a"%>

        <%= link_to "Delete" ,recipe_path(recipe), data: {turbo_method: :delete}, class: "a px-1 text-red-500 hover:text-red-500 hover:bg-red-200 rounded" %>
      </div>
    </div>
  <% end %>
</div>
